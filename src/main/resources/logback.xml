<?xml version="1.0" encoding="UTF-8" ?>

<configuration scan="true" scanPeriod="30 seconds">
<!--<configuration>-->
    <!-- To enable JMX Management -->
    <jmxConfigurator/>

    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>${MY_SELLS}/log/mysells.log</file>

        <encoder>
            <charset>UTF-8</charset>
<!--            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %-5level- [%thread] [%file:%line] %logger{36} - %msg%n</pattern>-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %-5level- [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{HH:mm:ss} - %-5level- [%file:%line] [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.saleslist" level="debug"/>

    <root level="info">
        <appender-ref ref="file"/>
        <appender-ref ref="console"/>
    </root>

</configuration>
